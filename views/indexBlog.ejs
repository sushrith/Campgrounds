<% include partials/header1 %>
<div class="ui main text container">
    <div class="ui huge header">
        RESful Blog App
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
                <% blog.forEach(function(blo){ %>
                    <div class="item">
                        <div class="image">
                        <img src="<%= blo.image%>"></div>
                        <div class="content">
                            <a class="header" href="/blogs/<%= blo._id %>"><%=blo.title%></a>
                            <div class="meta">
                                    <span><%=blo.created.toDateString() %></span>
                            </div>
                            <div class="description">
                                    <% if(typeof blo.description == 'undefined'){ %>
                                        <p> no content</p>  
                                    <% } else { %>
                                        <p> <%- blo.description.substring(0, 100) %>...</p>  
                                    <% } %>
                            </div>
                            <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blo._id %>">
                                Read More
                                <i class="right chevron icon"></i>  
                            </a>
                            
                            </div>
                        </div>
                        
                        
                        

                        
                
                    </div>
                <%});%>
        </div>
    </div>
</div>


<% include partials/footer %>
