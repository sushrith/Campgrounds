<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>This is the campgrounds page..!!</h1>
        <p>view our hand picked images</p>
        <p>
            <a class="btn btn-primary btn-large " href="/campgrounds/new">Add new campground</a>
        </p>
    </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% for(var i=0;i<campgrounds.length;i++){ %>
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                <div class="thumbnail" >
                    <img src="<%=campgrounds[i].image%>" style="min-height:275px;min-width:100%">
                <div class="caption">
                    <h4><%= campgrounds[i].name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%=campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
                </p>
                </div>
             </div>    
          <% }; %>
    </div>
</div>
<% include partials/footer %>